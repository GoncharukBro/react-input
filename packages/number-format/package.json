{
  "name": "@react-input/number-format",
  "version": "1.0.23",
  "author": "Nikolay Goncharuk <goncharuk.bro@gmail.com>",
  "description": "React input component for formatted number input with locale-specific.",
  "keywords": [
    "react",
    "react-component",
    "react-hook",
    "react-number-format",
    "input",
    "input-number-format",
    "text-field",
    "number",
    "format",
    "number-format",
    "currency-format",
    "percent-format",
    "pattern"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoncharukBro/react-input.git",
    "directory": "packages/number-format"
  },
  "bugs": {
    "url": "https://github.com/GoncharukBro/react-input/issues"
  },
  "homepage": "https://github.com/GoncharukBro/react-input/tree/main/packages/number-format#readme",
  "license": "MIT",
  "module": "dist/module/index.js",
  "main": "dist/node/index.cjs",
  "types": "dist/@types/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/node/index.cjs",
      "types": "./dist/@types/index.d.ts"
    },
    "./*": {
      "import": [
        "./dist/module/*.js",
        "./dist/module/*"
      ],
      "require": [
        "./dist/node/*.cjs",
        "./dist/node/*"
      ],
      "types": [
        "./dist/@types/*.d.ts",
        "./dist/@types/*"
      ]
    },
    "./*.js": {
      "import": [
        "./dist/module/*.js",
        "./dist/module/*"
      ],
      "require": [
        "./dist/node/*.cjs",
        "./dist/node/*"
      ],
      "types": [
        "./dist/@types/*.d.ts",
        "./dist/@types/*"
      ]
    }
  },
  "typesVersions": {
    "*": {
      "dist/@types/index.d.ts": [
        "dist/@types/index.d.ts"
      ],
      "*": [
        "dist/@types/*",
        "dist/@types/*/index.d.ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ts-node ../../scripts/build.ts",
    "release:major": "npm run build && ts-node ../../scripts/release.ts major",
    "release:minor": "npm run build && ts-node ../../scripts/release.ts minor",
    "release:patch": "npm run build && ts-node ../../scripts/release.ts patch"
  },
  "dependencies": {
    "@react-input/core": "^1.0.9"
  },
  "peerDependencies": {
    "@types/react": ">=16.8",
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
